#!/bin/sh

sudo cp $HOME/repos/skel/.bashrc /etc/skel/.bashrc
sudo rm -rf /etc/skel/.vim
sudo cp -r $HOME/repos/skel/.vim /etc/skel/.vim

for i in `ls -1 /home|grep -i $USER`
do
  echo $i
  sudo cp /etc/skel/.bashrc /home/$i/.bashrc
  sudo rm -rf /home/$i/.vim
  sudo cp -r /etc/skel/.vim /home/$i/.vim
done
