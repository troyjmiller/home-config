#!/bin/sh

usage() {
  echo usage: get PROJECT GHNAME
  echo    ex: get laston skilstak
}

if [ -z "$1" -o -z "$2" ]; then
  usage
  exit 1
fi

project="$1"
ghname="$2"
dest="$HOME/repos/$project"

if [ -e "$dest" ]; then
  echo "Destination ($dest) exists."
  exit 1
else
  git clone git@github.com:$ghname/$project $dest
  if [ $? -ne 0 ]; then
    echo "Failed to clone missing github project $dest"
    exit 1
  fi
fi
