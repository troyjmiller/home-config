#!/bin/sh

usage() {
  echo usage: get PROJECT GHNAME
  echo    ex: get laston skilstak
}

if [ -z "$1" -o -z "$2" ]; then
  usage
  exit 1
fi

project="$1"
ghname="$2"
dest="$HOME/repos/$project"

if [ -e "$dest" ]; then
  echo "Destination ($dest) exists."
  exit 1
fi

ppath="$dest/$project"

if [ ! -e "$ppath" ]; then
  git clone git@github.com:$ghname/$project $ppath
  if [ $? -ne 0 ]; then
    echo "Failed to clone missing github project $ppath"
    exit 1
  fi
fi
